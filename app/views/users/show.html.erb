<section class='user-show'>
  <div class='container'>
    <%= image_tag(profile_img_url(@user), :class=>'user-top-avatar') %>
    <h2><%= @user.name %> さん</h2>
    <hr>

    <% if current_user.id == @user.id %>
      <%= link_to :新規にアンケートを作成する, new_questionnaire_path, class: 'btn btn-primary' %>
    <% end %>
    <hr>

    <div class='user-static clearfix'>
      <div class='user-static-1'>
        <% if @user.questionnaires.length > 0 %>
          <%= link_to user_posteds_questionnaires_path(userid: @user.id) do %>
            <p><i>投稿数</i></p>
            <h3><%= @user.questionnaires.length %></h3>
          <% end %>
        <% else %>
          <p><i>投稿数</i></p>
          <h3><%= @user.questionnaires.length %></h3>
        <% end %>
      </div>
      <div class='user-static-1'>
        <% if @user.answered_qs.length > 0 %>
          <%= link_to user_answereds_questionnaires_path(userid: @user.id) do %>
            <p><i>回答数</i></p>
            <h3><%= @user.answered_qs.length %></h3>
          <% end %>
          <% else %>
            <p><i>回答数</i></p>
            <h3><%= @user.answered_qs.length %></h3>
          <% end %>
      </div>
      <div class='user-static-1'>
        <% if @user.favorites.length > 0 %>
        <%= link_to user_favorites_questionnaires_path(userid: @user.id) do %>
          <p><i>お気に入り</i></p>
          <h3><%= @user.favorites.length %></h3>
        <% end %>
        <% else %>
          <p><i>お気に入り</i></p>
          <h3><%= @user.favorites.length %></h3>
        <% end %>
      </div>
    </div>
    <hr>

    <% if current_user.id == @user.id %>
      <%= link_to :アカウント情報, edit_user_registration_path(@user),  class: 'btn btn-primary' %>
    <% end %>

    <hr>

    <% if user_signed_in? %>
      <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-danger' %></p>
    <% end %>
  </div>
</section>
